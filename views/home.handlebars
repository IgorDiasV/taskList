<link rel="stylesheet" type="text/css" href="css/home.css"  />


<div id="modal-promocao" class="modal-container">
	<div class="modal">
		<button class="fechar">X</button>
		<h3 class="subtitulo">Nova tarefa:</h3>
		<form action="/addTarefa" method="POST" name="myForm" onsubmit="return validateForm()">
			<div class="bloco_form"><input type="text" id='titulo' class="input_titulo" placeholder="Título" name="nomes"></div>
			<div class="bloco_form"> 
				<input type="text" id='hora' class="input_hora" placeholder="Hora" name="horas">
				<input type="text" id='tempo' class="input_tempo" placeholder="Tempo" name="intervalos">
				<input type="checkbox" id='repeticao' class="input_repeticao" placeholder="repeticao" name="replays">
			</div>
			<div id="maior">

				<div>
					<div class="box">
						<input id="domingo" type="checkbox" name="domingos">
						<span class="check">D</span>
						<label for="domingo">domingo</label>
					</div>
					<div class="box">
						<input id="segunda" type="checkbox" name="segundas">
						<span class="check">S</span>
						<label for="segunda">segunda</label>
					</div>
					<div class="box">
						<input id="terca" type="checkbox" name="tercas">
						<span class="check">T</span>
						<label for="terca">terça</label>
					</div>
					<div class="box">
						<input id="quarta" type="checkbox" name="quartas">
						<span class="check">Q</span>
						<label for="quarta">quarta</label>
					</div>
					<div class="box">
						<input id="quinta" type="checkbox" name="quintas">
						<span class="check">Q</span>
						<label for="quinta">quinta</label>
					</div>
					<div class="box">
						<input id="sexta" type="checkbox" name="sextas">
						<span class="check">S</span>
						<label for="sexta">sexta</label>
					</div>
					<div class="box">
						<input id="sabado" type="checkbox" name="sabados">
						<span class="check">S</span>
						<label for="sabado">sabado</label>
					</div>
				</div>
			</div>
			<button type="submit" class="button_c" value="Cadastrar">Confirmar</button>
		</form>
	</div>
</div>

<div class="bloco_grande">
	<div class="btn">
		<button onclick="iniciaModal()" class="buttonADD">ADD TASK</button>
	</div>

	<div class="titulo">
		<section class="tarefas">
			<div class="letras_dias">
				<p>D</p>
			</div>
			<div class="letras_dias">
				<p>S</p>
			</div>
			<div class="letras_dias">
				<p>T</p>
			</div>
			<div class="letras_dias">
				<p>Q</p>
			</div>
			<div class="letras_dias">
				<p>Q</p>
			</div>
			<div class="letras_dias">
				<p>S</p>
			</div>
			<div class="letras_dias">
				<p>S</p>
			</div>
		</section>
	</div>

	{{#each tarefas}}
	<div class="container_tarefas">
		<div class="letras_tarefas">
			<p>{{nomes}}</p>
			<p>{{intervalos}} MIM</p>
		</div>
		<section class="tarefas">
			<div class="bloco_dias" id={{id}} diaDeTarefa={{domingos}} dia="0" onclick="realizaTarefa('{{domingos}}','{{id}}',0)"></div>
			<div class="bloco_dias" id={{id}} diaDeTarefa={{segundas}} dia="1" onclick="realizaTarefa('{{segundas}}','{{id}}',1)"></div>
			<div class="bloco_dias" id={{id}} diaDeTarefa={{tercas}} dia="2" onclick="realizaTarefa('{{tercas}}','{{id}}',2)"></div>
			<div class="bloco_dias" id={{id}} diaDeTarefa={{quartas}} dia="3" onclick="realizaTarefa('{{quartas}}','{{id}}',3)"></div>
			<div class="bloco_dias" id={{id}} diaDeTarefa={{quintas}} dia="4" onclick="realizaTarefa('{{quintas}}','{{id}}',4)"></div>
			<div class="bloco_dias" id={{id}} diaDeTarefa={{sextas}} dia="5" onclick="realizaTarefa('{{sextas}}','{{id}}',5)"></div>
			<div class="bloco_dias" id={{id}} diaDeTarefa={{sabados}} dia="6" onclick="realizaTarefa('{{sabados}}','{{id}}',6)"></div>
		</section>
	</div>
	<a href="/delete/{{id}}"><button>Deletar</button></a>
	{{/each}}

	{{#each teste}}
		<reilta id={{id_check}} 
		domingoFeito={{domingos}} 
		segundaFeito={{segundas}}
		tercaFeito={{tercas}}
		quartaFeito={{quartas}}
		quintaFeito={{quintas}}
		sextaFeito={{sextas}}
		sabadoFeito={{sabados}}>

		</reilta>

		
	{{/each}}
</div>

<button onclick="enviarAlteracoes()">Salvar</button>
<script type="text/javascript" src="script/home.js"></script>